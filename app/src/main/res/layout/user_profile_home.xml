<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/AdminProfileImage"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/default_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="22dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/AdminFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/piyush_makwana"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_marginStart="22dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/AdminProfileImage"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/AdminEmailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/insider0piyush_gmail_com"
        android:textSize="14sp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/AdminFullName"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>